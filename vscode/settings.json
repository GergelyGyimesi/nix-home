{
  "[haskell]": {
    "editor.defaultFormatter": "sjurmillidahl.ormolu-vscode",
    "editor.fontLigatures": "'ss03'"
  },
  "breadcrumbs.enabled": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.detectIndentation": false,
  "editor.fontFamily": "FiraCode-Retina",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.renderControlCharacters": false,
  "editor.tabSize": 2,
  "editor.wordWrapColumn": 120,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.autoSave": "afterDelay",
  "gitlens.codeLens.enabled": false,
  "gitlens.views.compare.location": "gitlens",
  "gitlens.views.fileHistory.location": "gitlens",
  "gitlens.views.lineHistory.location": "gitlens",
  "gitlens.views.repositories.location": "gitlens",
  "gitlens.views.search.location": "gitlens",
  "hic.executablePath": "ghcide",
  "html.format.endWithNewline": true,
  "ormolu.path": "ormolu -o -XTypeApplications -o -XBangPatterns  -o -XPatternSynonyms -o -XOverloadedLabels",
  "plantuml.exportFormat": "svg",
  "plantuml.java": "/usr/bin/java",
  "search.showLineNumbers": true,
  "search.smartCase": true,
  "telemetry.enableTelemetry": false,
  "terminal.external.osxExec": "/Applications/iTerm.app",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.macOptionIsMeta": true,
  "terminal.integrated.scrollback": 100000,
  "terminal.explorerKind": "external",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "FiraCode-Retina",
  "terminal.integrated.shell.osx": "fish",
  // "terraform.indexing": {
  //   "enabled": false,
  //   "liveIndexing": false,
  //   "delay": 500,
  //   "exclude": [
  //     ".terraform/**/*",
  //     "**/.terraform/**/*"
  //   ]
  // },
  "terraform.languageServer": {
    "args": [],
    "external": true,
    "pathToBinary": "terraform-lsp"
  },
  // "terraform.lintPath": "tflint",
  "window.restoreWindows": "all",
  "window.zoomLevel": 1,
  "workbench.colorCustomizations": {
    "editorError.foreground": "#ff0000",
    "editorError.border": "#ff0000",
    "editorHint.foreground": "#ffa500",
    "editorHint.border": "#ffa500",
    "editorInfo.foreground": "#ffa500",
    "editorInfo.border": "#ffa500",
    "editorWarning.foreground": "#ff4500",
    "editorWarning.border": "#ff4500"
  },
  "workbench.editor.enablePreview": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.panel.defaultLocation": "right",
  "workbench.settings.enableNaturalLanguageSearch": false,
  "yaml.format.enable": true,
  "yaml.format.printWidth": 160
}
